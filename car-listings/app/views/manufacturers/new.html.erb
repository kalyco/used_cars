<%- if @manufacturer.errors.present? -%>
  <%- @manufacturer.errors.full_messages.each do |error| -%>
    <ul>
      <li><%= error %></li>
    </ul>
  <% end %>
<% end %>

<h1>enter the manufacturer information</h1>
<%= form_for @manufacturer do |f| %>
  <%= f.label :name, "name" %>
  <%= f.text_field :name %>

  <%= f.label :country, "country" %>
  <%= f.text_field :country %>

  <%= f.submit "add manufacturer" %>
<% end %>
